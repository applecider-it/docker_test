{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,

    "jsx": "react-jsx",
    "types": ["node"],

    "baseUrl": "./resources/js",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.tsx"
  ]
}
