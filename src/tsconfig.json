{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,

    "jsx": "preserve",
    "types": ["node"]
  },
  "include": [
    "resources/**/*.ts",
    "resources/**/*.js"
  ]
}
